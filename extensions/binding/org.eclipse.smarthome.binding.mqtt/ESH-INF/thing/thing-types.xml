	<!-- Topic Thing Type -->
	<thing-type id="topic">

		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge" />
		</supported-bridge-type-refs>

		<label>MQTT Topic</label>
		<description>Topic for MQTT Binding</description>

		<channels>
			<channel id="number" typeId="number-channel" />
			<channel id="switch" typeId="switch-channel" />
			<channel id="color" typeId="color-channel" />
			<channel id="contact" typeId="contact-channel" />
			<channel id="datetime" typeId="datetime-channel" />
			<channel id="rollershutter" typeId="rollershutter-channel" />
			<channel id="dimmer" typeId="dimmer-channel" />
			<channel id="string" typeId="string-channel" />
		</channels>
		<config-description>
			<parameter name="topicId" type="text" required="true">
				<label>MQTT Topic</label>
				<description>MQTT topic for this thing
                </description>
			</parameter>
			<parameter name="type" type="text" required="true">
				<label>Type</label>
				<description>command or state
                </description>
				<options>
					<option value="state">state</option>
					<option value="command">command</option>
				</options>
				<default>state</default>
			</parameter>
			<parameter name="direction" type="text" required="true">
				<label>Direction</label>
				<description>in or out
                </description>
				<options>
					<option value="in">in</option>
					<option value="out">out</option>
					<option value="both">both</option>
				</options>
				<default>in</default>
			</parameter>
			<parameter name="transform" type="text" required="false">
				<label>Transform</label>
				<description>Transformation to be applied to the data
                </description>
				<default>default</default>
			</parameter>
        <parameter name="createChannels" type="boolean" required="false">
                <label>Channel Creation</label>
                <description>Create new channels for received topics
                </description>
                <default>true</default>
            </parameter>
            
		</config-description>

	</thing-type>

	<channel-type id="number-channel">
		<item-type>Number</item-type>
		<label>Number type MQTT payload</label>
		<description>Channel for mapping Number types to MQTT messages</description>
	
		<config-description>
			<parameter name="topicId" type="text" required="true">
				<label>MQTT Topic</label>
				<description>MQTT topic for this channel
                </description>
			</parameter>
			<parameter name="itemtype" type="text" required="true">
				<label>Item Type</label>
				<description>Controls to what item types the data is mapped.
                </description>
				<options>
					<option value="ContactItem">ContactItem</option>
					<option value="DateTimeItem">DateTimeItem</option>
                    <option value="DimmerItem">DimmerItem</option>
                    <option value="NumberItem">NumberItem</option>
                    <option value="RollershutterItem">RollershutterItem</option>
                    <option value="StringItem">StringItem</option>                    
                    <option value="SwitchItem">SwitchItem</option>
                    <option value="ColorItem">ColorItem</option>
                    <option value="LocationItem">LocationItem</option>
                    <option value="PlayerItem">PlayerItem</option>
                    <option value="ImageItem">ImageItem</option>
				</options>
				<default>StringItem</default>
			</parameter>
		</config-description>

	</channel-type>

